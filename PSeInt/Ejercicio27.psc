Proceso Ejercicio27
	//Ejercicio27
	//Pedir un número y decir si es par o impar
	
	//DEFINICIÓN DE VARIABLES
	definir num Como Real;
	
	//ENTRADA DE DATOS
	escribir "Digite una número:";
	leer num;
	
	//PROCESOS
	//SALIDA DE DATOS
	si (num mod 2 = 0) entonces 
		escribir "Su número es par";
	sino
		escribir "Su número es impar";
	FinSi
FinProceso