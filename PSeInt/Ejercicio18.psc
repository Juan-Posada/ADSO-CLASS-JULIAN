Proceso Ejercicio18
	//Ejercicio18
	//Pedir un número e indicar si es positivo o negativo.
	
	//DEFINICIÓN DE VARIABLES
	definir num como real;
	
	//ENTRADA
	escribir "Inserte su número: ";
	leer num;
	
	//PROCESOS
	//SALIDA
	si (num < 0) Entonces
		escribir "Su número negativo.";
	sino 
		escribir "Su número es positivo.";
	FinSi
FinProceso
